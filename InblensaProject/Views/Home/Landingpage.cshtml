@{

    Layout = "~/Views/Shared/View.cshtml";
    ViewBag.Title = "Log in";

}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Inblensa</title>
    <link rel="stylesheet" href="css/style.css">

</head>
<body>
    <header class="header">
        <div class="container">

            <div class="logo">
                <img src="https://i.postimg.cc/Y9m0Bhjm/Pngtree-decoration-wrench-screwdriver-4581956.png" alt="">
            </div>

            <nav class="menu">
                <ul class="menu__list">
                    <li class="menu__item"><a class="menu__link selected" href="#hero">Home</a></li>
                    <li class="menu__item"><a class="menu__link" href="#about">About Us</a></li>
                    <li class="menu__item"><a class="menu__link" href="#Products">Products</a></li>
                    <li class="menu__item"><a class="menu__link" href="#contacts">Contacts</a></li>
                </ul>
                <div class="menu__register">
                    <a class="menu__link" href="/Identity/Account/Login">Login</a>
                </div>

            </nav>
            <div class="navMenu">
                <svg width="40" height="40" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M4 6l16 0" />
                    <path d="M4 12l16 0" />
                    <path d="M4 18l16 0" />
                </svg>
            </div>

        </div>
    </header>
    <main>
        <section class="hero" id="hero">
            <div class="container">
                <div class="hero__content">
                    <div class="hero__txt">
                        <h1 class="hero__h1">Find the Best Products and Tools at Inblensa Hardware Store.</h1>
                        <p class="hero__p">
                            We're always here to provide you with everything you need for your construction, repair, and maintenance projects.
                        </p>
                        <a href="#products" class="btn btn--block">Explore Products</a>

                        <div class="hero__number">
                            <div class="hero__expert">
                                <h2>10+</h2>
                                <p>Specialized Departments</p>
                            </div>
                            <div class="hero__expert">
                                <h2>1000+</h2>
                                <p>Quality Products</p>
                            </div>
                            <div class="hero__expert">
                                <h2>10+</h2>
                                <p>Years of Experience</p>
                            </div>
                        </div>

                    </div>
                    <div class="hero__picture">
                        <img class="hero__img" width="200px" height="300px" src="https://i.postimg.cc/c4DcJbXM/399714965-358107546591939-812104008249831599-n.jpg" alt="">
                    </div>
                </div>
            </div>
        </section>
        <section class="about section" id="about">
            <div class="container">
                <div class="about__content">
                    <div class="about__txt">
                        <h2 class="about__h2">Find Everything You Need at Inblensa Hardware Store</h2>
                        <p class="about__p">
                            Welcome to Inblensa Hardware Store! Your trusted destination for all your construction, repair, and maintenance needs. Discover our extensive catalog of high-quality tools, materials, and supplies, ready to help you bring your projects to life.
                        </p>
                        <br>
                        <p class="about__p">
                            Our team of experts is here to provide you with the best advice and support at every stage of your projects. From hand tools to electrical equipment, and from construction materials to safety accessories, we are committed to providing you with everything you need to make your projects a success.
                        </p>
                    </div>

                    <div class="about__picture">
                        <img class="about__img" src="https://i.postimg.cc/T3bMqgyS/405405109-366156895787004-3471139196607921035-n.jpg" alt="">
                    </div>
                </div>
            </div>
        </section>
        <section class="program section" id="Products">
            <div class="container">
                <h2 class="program__h2">Find the best products for your construction at Inblensa Hardware Store.</h2>
                <div class="program__content">
                    <div class="program__card">
                        <img src="https://i.postimg.cc/Vkw9Ncch/399753315-359024069833620-2962369486169090696-n.jpg" alt="Hand Tools">
                        <h3 class="program__h3">Hand Tools</h3>
                        <p class="program__p">Discover our wide selection of high-quality hand tools for any construction job.</p>
                    </div>
                    <div class="program__card">
                        <img src="https://i.postimg.cc/4xnfVYZH/368236914-312691287800232-1907460931157468356-n.jpg" alt="Construction Materials">
                        <h3 class="program__h3">Construction Materials</h3>
                        <p class="program__p">Find the most durable and long-lasting construction materials for your building projects.</p>
                    </div>
                    <div class="program__card">
                        <img src="https://i.postimg.cc/Dy9sM3ZZ/405325947-365157522553608-1780302042367441630-n.jpg" alt="Electrical Equipment">
                        <h3 class="program__h3">Electrical Equipment</h3>
                        <p class="program__p">Explore our range of state-of-the-art electrical equipment to facilitate your construction tasks.</p>
                    </div>
                    <div class="program__card">
                        <img src="https://i.postimg.cc/pLmGDHSL/405371919-367659015636792-6078095765848282422-n.jpg" alt="Paints">
                        <h3 class="program__h3">Paints</h3>
                        <p class="program__p">Give the finishing touch to your projects with our variety of high-quality paints in different colors and finishes.</p>
                    </div>
                </div>
            </div>
        </section>


